<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".EdgeToEdgeActivity">

    <Button
        android:id="@+id/butFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="FullScreen"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Exist Fullscreen"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/butFullScreen"
        app:layout_constraintStart_toStartOf="@+id/butFullScreen"
        app:layout_constraintTop_toBottomOf="@+id/butFullScreen" />

</androidx.constraintlayout.widget.ConstraintLayout>
